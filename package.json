{
  "name": "Note-HEMC",
  "version": "1.0.0",
  "description": "Projeto Full Stack com Frontend React/Vite e Backend Node.js",
  "private": true,
  "scripts": {
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "start": "npm run dev",
    "build:backend": "npm run build --prefix backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:all": "npm run build:backend && npm run build:frontend",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "lint:backend": "npm run lint --prefix backend",
    "lint:frontend": "npm run lint --prefix frontend",
    "lint:all": "npm run lint:backend && npm run lint:frontend"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.8",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mongodb": "^6.17.0"
  }
}
